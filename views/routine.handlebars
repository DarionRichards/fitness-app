<header>{{#if loggedIn}}
  {{> privateNavBar}}
  {{else}}
  {{> publicNavBar}}
  {{/if}}</header>

<main>
      <section class="routine-wrapper">
        <aside class="aside-routine-container">
          <section class="routine-container">
            <section class="routine-name-container">
              <h4 class="routine-name">{{routine.name}}</h4>
            </section>
            <h5 class="routine-date-card text-center align-middle">
              {{formatDate routine.createdAt }}
            </h5>
            <section class="routine-details">
              <div class="routine-container-info">
                <div class="routine-info-container">
                  <div class="routine-info-card-content">
                    <h4 class="info-h4">
                      {{routineLength routine.time_start routine.time_end}}
                    </h4>
                  </div>
                  <div class="routine-info-card-title">
                    <p>Minutes</p>
                  </div>
                </div>
                <div class="routine-info-container">
                  <div class="routine-info-card-content">
                    <h4 class="info-h4">750kcal</h4>
                  </div>
                  <div class="routine-info-card-title">
                    <p>Est. Calories</p>
                  </div>
                </div>
              </div>
            </section>
            <h6 class="author-h6 text-center">
              {{routine.user.first_name}} {{routine.user.last_name}}
            </h6>
          </section>
        </aside>
        <section class="main-container">
          <section class="exercise-title-card">Exercises</section>
          <section class="exercise-container">
            <div class="cards">
              {{#each routine.exercises as |exercise|}}
              {{> routineExerciseCard}}
              {{/each}}
            </div>
          </section>
        </section>
      </section>
    </main>